package sec_verify.exam05;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Arrays;

public class Student {

	String name;
	int num;
	int korScore;
	int engScore;
	int matScore;
	
	public Student(String[] stu) {
		this.name = stu[0];
		this.num = Integer.valueOf(stu[1]);
		this.korScore = Integer.valueOf(stu[2]);
		this.engScore = Integer.valueOf(stu[3]);
		this.matScore = Integer.valueOf(stu[4]);
	}
	
	public String toString() {
		return this.name + "\t" + this.num + "\t" 
				+ this.korScore + "\t" + this.matScore + "\t"+this.engScore;
	}
	public static void main(String[] args) {
		String csvFile = "/Users/yunsangil/Documents/computing/JAVA/Chap33 Input output stream/src/sec_verify/exam05/scoreData";
	    String line = "";
	    String cvsSplitBy = ",";
	    try (BufferedReader br = new BufferedReader(new FileReader(csvFile))) {
	
	        while ((line = br.readLine()) != null) {
	            // use comma as separator
	            String[] score = line.split(cvsSplitBy);
	            System.out.println("score : " + Arrays.toString(score));	
	        }
	    } 
	    catch (IOException e) {
	        e.printStackTrace();
	    }
	}
}
